<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4>会員情報編集</h4>
      <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
      <tbody>
        <tr>
          <%= f.label :氏名 %>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
          <br>
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
          <br>
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code %>
          <br>
          <%= f.label :住所 %>
          <%= f.text_field :address %>
          <br>
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number %>
          <br>
          <%= f.label :メールアドレス %>
          <%= f.text_field :email %>
        </tr><br>
        <%= f.submit '変更を保存', class: "btn btn-success"%>
      </tbody>
      <% end %>
    </div>
  </div>
</div>