<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, local: true do |f| %>

    <%= f.label :name, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %><br>

    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %><br>
    
    <%= f.label :name, "商品説明" %>
    <%= f.text_area :introduction %><br>

    <%= f.label :genre_id, "商品種別" %><br>
    <%= f.select :genre_id, [["ケーキ", "1"], ["焼き菓子", "2"], ["プリン", "3"], ["キャンディ", "4"]], 
    include_blank: "選択して下さい" %>
    <br>
    
    <tr>税抜価格</tr>
    <%= f.text_field :price %><br>

    <tr>販売ステータス</tr>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売停止中"  %>
    <%= f.radio_button :is_active, false  %>

    <br>

    <%= f.submit '新規登録', class: "btn-success" %>

<% end %>