<div class="container">
  <div class="row">
    <div class="col-sm-12">
    <h4>会員一覧</h4>
    <table class="table">
      <thread>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <th><%= customer.id %></th>
              <th><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></th>
              <th><%= customer.email %></th>
                <% if customer.is_deleted == true%>
                 <td class="text-secondary">退会済み</td>
                <% else %>
                 <td class="text-success">有効</td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
      </thread>
    </table>
    </div>
  </div>
</div>
