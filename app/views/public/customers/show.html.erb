<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4>マイページ</h4>
      <p>
        登録者情報
        <%= link_to "編集する", edit_public_customer_path(id: current_customer), class: "btn btn-success ml-5"%>
      </p>
      <table class="table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <%= link_to "配送先を見る", public_addresses_path, class: "btn btn-primary" %>
        </tbody>
      </table>
    </div>
  </div>
</div>
