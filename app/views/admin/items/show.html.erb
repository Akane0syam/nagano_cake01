<div class="container">
  <div class="row">
    <div class="col-sm-8">
     <h4>商品詳細</h4>
      <div class="col-lg text-center mb-5">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x300" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>
      <tbody>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td><br>
          <th>商品説明</th>
          <td><%= @item.introduction %></td><br>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td><br>
          <th>税抜価格<br>(税抜価格)</th>
          <td><%= @item.price %></td>円<br>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="h5 text-success ">販売中</p>
            <% else %>
              <p class="h5 text-secondary ">販売停止中</p>
            <% end %>
          </td>
        </tr>
        <br>
        <%=link_to '編集する', edit_admin_item_path, class: "btn btn-success" %>
      </tbody>
    </div>
  </div>
</div>
