<div class="container">
  <div class="row">
    <div class="col-sm-12">
         <h2>注文履歴一覧</h2>
          <% if @order.present? %>
            <table class="table table-bordered table-condensed">
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
            </table>
            <table class="table table-bordered table-condensed">
              <% @orders.each do |order| %>
                <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
                <th><%= order.delivery_postal_code %><br>
                	  <%= order.delivery_address %><br>
                	  <%= order.delivery_name %>
                </th>
                <th><%= order.item_id %></th>
                <th><%= order.amount_billed %>円</th>
                <th><%= order.is_active %></th>
                <th><%= link_to "表示する", ublic_order_path, class: "btn btn-primary" %></th>
              <% end %>
            </table>
          <% else %>
            <p>注文履歴がありません。</p>
          <% end %>
    </div>
  </div>
</div>

