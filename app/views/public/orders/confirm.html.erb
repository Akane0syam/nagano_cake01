<div class="container">
  <div class="row">
    <div class="col-sm-9">
        <h2>注文情報確認</h2>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr><%= image_tag cart_item.item.image, size: "70x50" %><%= cart_item.item.name %></tr>
          <tr><%= cart_item.tax_in_price.to_s(:delimited) %>円</tr>
          <tr><%= cart_item.amount %></tr>
          <tr><%= cart_item.tax_in_price.to_s(:delimited) %>円</tr>
        <% end %>
        </tbody>
    </div>
    <div class="col-sm-3">
      <table>
        <tbody>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= (@order.amount_billed - @order.item.tax_in_price.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= (@order.amount_billed + @order.item.tax_in_price.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
      <div>
        
      </div>
    </div> 
  </div>
</div>