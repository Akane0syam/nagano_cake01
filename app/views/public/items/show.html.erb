<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <h5>ジャンル検索</h5>
      <table>
        <tr>
          <td>ケーキ</td>
        </tr>
        <tr>
          <td>焼き菓子</td>
        </tr>
        <tr>
          <td>プリン</td>
        </tr>
        <tr>
          <td>キャンディ</td>
        </tr>
      </table>
    </div>
    <div class="col-sm-5">
      <%= image_tag @item.image, size: "300x300" %>
    </div>
     <div class="col-sm-5">
      <tr>
        <td>
          <%= @item.name %>
        </td><br>
        <td>
          <%= @item.introduction %>
        </td><br>
        <td>
          ¥<%= @item.price %>(税込)
        </td>
        <%= form_with model: @item, url: public_cart_items_index_path do |f| %>
          <%= f.select :amount, *[1..9] %>
          <%= f.submit 'カートに入れる', class: "btn btn-success"%>
        <% end %>
      </tr>
    </div>
  </div>
</div>