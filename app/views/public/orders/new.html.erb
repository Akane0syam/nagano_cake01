<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h4>注文情報入力</h4>
      <%= form_with model: @order, url: public_orders_path do |f| %>
        <table class="table">
          <tbody>
            <div class="lead mb-2">支払方法</div>
              <%= f.radio_button :payment_method, "credit_card" %>
              <%= f.label :payment_method, "クレジットカード" %>
              <br>
              <%= f.radio_button :payment_method, "transfer" %>
              <%= f.label :payment_method, "銀行振込" %>
              
            <div class="lead mb-2">お届け先</div>
              <% if current_customer %>
                <%= f.radio_button :address_select, 0 %>
                <%= f.label :ご自身の住所 %>　　
                <%= current_customer.address %>
              <% end %><br>
              <%= f.radio_button :address_select, 1 %>
              <%= f.label :登録済住所から選択 %><br>
              <%= f.collection_select(:address_id, @addresses, :id, :address) %>
            <div><%= f.radio_button :address_select, 2 %>  新規住所登録</div>

            <div class="form-group has-icon">
              <%= f.label :郵便番号 %>
              <%= f.text_field :delivery_postal_code, class: "form-control" %>
            </div>
            <div class="form-group has-icon">
              <%= f.label :住所 %>
              <%= f.text_field :delivery_address, class: "form-control" %>
            </div>
            <div class="form-group has-icon">
              <%= f.label :宛名 %>
              <%= f.text_field :delivery_name, class: "form-control" %>
            </div>
          </tbody>
          <%= f.submit "購入確認へ進む", class: "btn btn-primary btn-block btn-base-1 mt-20" %>
        </table>
      <% end %>
    </div>
  </div>
</div>
