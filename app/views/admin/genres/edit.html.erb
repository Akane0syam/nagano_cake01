<div class="container">
  <div class="row text-center">
    <div class="col-sm-5">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>

        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>

        <%= f.submit '変更を保存', class: "btn btn-success"%>
      <% end %>
    </div>
  </div>
</div>