<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h4><% @customer.last_name %><% @customer.first_name %>さんの会員詳細</h4>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id%></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><% @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.address%></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbale>
    </div>
    <div class="d-flex justify-content-around">
      <p><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></p>
      <p><%= link_to "注文履歴一覧を見る", admin_orders_show_path, class: "btn btn-primary" %></p>
    </div>
  </div>
</div>

