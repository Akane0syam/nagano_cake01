<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>配送先登録/一覧</h1>
      <%= form_with model: @address, url: public_addresses_path do |f| %>
      <form class="row g-3">
        <div class="col-md-6">
          電話番号(ハイフンなし)  <%= f.text_field :postal_code %>
        </div>
        <div class="col-md-6">
          住所  <%= f.text_field :address %>
        </div>
        <div class="col-md-6">
          宛名  <%= f.text_field :name %>
        </div>
        <div class="text-right" >
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </from>
      <% end %>
    </div><br>
    <table class="table-bordered table-striped">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", public_address_path(address), method: :delete, confirm: "本当に削除しますか", class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
